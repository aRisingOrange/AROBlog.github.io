@model IEnumerable<AROBlog.DTO.ArticleDTO>

@{
    ViewData["Title"] = "ArticleList";
}

<h1>ArticleList</h1>

<p>
    <a asp-action="PostArticle">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
